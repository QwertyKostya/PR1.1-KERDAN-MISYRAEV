<Window x:Class="PR1._1_KERDAN_MISYRAEV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Поле для ввода значения X -->
        <TextBox Name="txtX" HorizontalAlignment="Left" Height="23" Margin="259,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="x:" HorizontalAlignment="Left" Margin="259,0,0,0" VerticalAlignment="Center"/>

        <!-- Поле для ввода значения m -->
        <TextBox Name="txtM" HorizontalAlignment="Left" Height="23" Margin="393,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="m:" HorizontalAlignment="Left" Margin="393,200,0,0" VerticalAlignment="Top" Height="30"/>

        <!-- Группа радиокнопок -->
        <GroupBox Header="Выбор варианта" HorizontalAlignment="Left" Margin="262,270,0,0" VerticalAlignment="Top" Height="90" Width="240">
            <StackPanel Orientation="Vertical">
                <RadioButton Name="rbOption1" Content="Вариант 1" IsChecked="True"/>
                <RadioButton Name="rbOption2" Content="Вариант 2"/>
                <RadioButton Name="rbOption3" Content="Вариант 3"/>
            </StackPanel>
        </GroupBox>

        <!-- Кнопка для расчета -->
        <Button Name="btnCalculate" Content="Рассчитать" HorizontalAlignment="Left" Margin="402,377,0,0" VerticalAlignment="Top" Click="btnCalculate_Click"/>

        <!-- Поле для вывода результата -->
        <TextBlock Name="lblResult" HorizontalAlignment="Left" Margin="62,371,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" TextAlignment="Center" Width="299"/>

        <!-- Изображение -->
        <Image Source="C:\Users\konst\Desktop\Screenshot_20250121_092704.png" Margin="148,-1,148,236"/>
    </Grid>
</Window>